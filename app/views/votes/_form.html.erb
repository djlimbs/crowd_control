<%= form_for @vote_params, :url => votes_path, :remote => true, :class => 'control-group', :id => 'new_vote' do |f| %>
	<%= f.hidden_field :chart_id, :value => @chart.id %>
	<%= f.hidden_field :voter_name, :value => @voter_name %>
	<%= f.label "Artist name: (just fill this out if you want anything by the artist)" %>
	<%= f.text_field :name, class: "artist_name_field", data: {autocomplete_source: guest_artist_search_path } %>
	<%= f.label "Song title: (if you forgot who sings it, just fill this out and we'll search our database)" %>
	<%= f.text_field :title, class: "display_name_field", data: {autocomplete_source: guest_song_search_path } %>
	<br>
	<% if current_user.nil? or current_user.couple?%>
		<%= f.submit 'Pretty please?!', :class => 'btn'%>
	<% else %>
		<%= f.submit 'CLEARED', :class => 'btn'%>
		<%= f.submit 'Tame', :class => 'btn'%>
		<%= f.submit 'Solid', :class => 'btn'%>
		<%= f.submit 'Picked up!', :class => 'btn'%>
		<%= f.submit 'RAGE', :class => 'btn'%>
	<% end %>
<% end %>