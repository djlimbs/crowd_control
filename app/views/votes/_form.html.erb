<%= form_for @vote, :url => votes_path, :remote => true, :class => 'control-group', :id => 'new_vote' do |f| %>
	<%= f.hidden_field :chart_id, :value => @chart.id %>
	<%= f.hidden_field :voter_name, :value => @voter_name %>
	<%= f.hidden_field :score, :value => 1 %>
	<%= f.label "Add a new song (Artist - Song Title):" %>
	<%= f.text_field :display_name, class: "display_name_field", data: {autocomplete_source: guest_search_path}%>
	<%= f.submit 'Pretty please?!', :class => 'btn'%>
<% end %>