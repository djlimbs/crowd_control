<td>
	<% if @vote = Vote.where(:chart_id => this_chart_id, :voter_name => voter_name, :song_id => song.first).first %>
		<%= link_to 'Actually no', @vote, method: :delete, :remote => true, :class => 'btn' %>
	<% else %>
		<%= link_to '+1', votes_path(:chart_id => this_chart_id, :voter_name => voter_name, :score => 1, :display_name => Song.find(song.first).display_name), :method => 'post', :remote => true, :form_class => 'btn-group', :class => 'btn' %>
	<% end %>
</td>