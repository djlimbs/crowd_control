<% @vote_info = { :chart_id => @chart.id, :voter_name => @voter_name, :score => 1, :display_name => Song.find(song.first).display_name} %>
<% @vote = Vote.where(:chart_id => @chart.id, :voter_name => @voter_name, :song_id => song.first).first %>

<%= link_to '+1', votes_path(@vote_info), :method => 'post', :remote => true, :class => 'btn add_vote' unless song.last == "Do not play!" %>

<% if @vote %>
	<%= link_to 'Actually, no', @vote, method: :delete, :remote => true, :class => 'btn btn-inverse remove_vote display', :id => @vote.id unless song.last == "Do not play!"%>
<% else %>
	<%= link_to 'Actually, no', @vote, method: :delete, :remote => true, :class => 'btn btn-inverse remove_vote no_display' unless song.last == "Do not play!"%>
<% end %>