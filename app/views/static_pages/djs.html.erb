<h1 class="text-center">
	Crowd Control
</h1>
<div class="hero-unit">
	<h1>
		Floor Analytics
	</h1>
	<p>
		Hey <%= @dj.name %>, here's the word on the street
	</p>
	
	<div class="alert">
		<h3>They tweeted you!</h3>
		<p>#couplesname - request</p>
	</div>
	
	<h3>Charts</h3>
	
	<% @couples.each do |couple| %>
		<%= link_to couple.name, get_chart_path(name: couple.name, voter_name: @dj.name), :remote => true %><br>
	<% end %>
	
	<div id="chart_body">
		<!-- <%= render 'this_chart', :display => @display, :voter_name => @dj.name, :this_chart_id => @chart.id, :this_chart_name => @chart.name%>-->
	</div>
	
	<div class="well">
		<h3>
			How's this gig going?
			<br>
		</h3>
		<table class="table">
			<thead>
				<tr>
					<th>
						Artist - Song Title
					</th>
					<th>
						Score
					</th>
				</tr>
			</thead>
			<tbody>
					
			</tbody>
		</table>
		<div class="control-group">
			<label class="control-label">
				Enter the song (Artist - Song Title):
			</label>
			<div class="controls">
				<input type="text">
			</div>
		</div>
		<div class="btn-group">
			<a href="#" class="btn">CLEARED</a>
			<a href="#" class="btn">Tame</a>
			<a href="#" class="btn">Solid</a>
			<a href="#" class="btn">Picked up!</a>
			<a href="#" class="btn">RAGE</a>
		</div>
	</div>
	<div class="control-group">
		<div class="control-group">
			<div class="controls">
			</div>
		</div>
		<div class="controls">
		</div>
	</div>
</div>
