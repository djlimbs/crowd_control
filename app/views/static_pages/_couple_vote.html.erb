<% @vote = Vote.where(:chart_id => @chart.id, :voter_name => @voter_name, :song_id => song.first).first %>
<%= link_to 'I want it too!', votes_path(:chart_id => @chart.id, :voter_name => @voter_name, :score => 2, :display_name => Song.find(song.first).display_name), :method => 'post', :remote => true, :class => 'btn add_vote' %>
<%= link_to 'Hell no! Veto!', votes_path(:chart_id => @chart.id, :voter_name => @voter_name, :score => -100, :display_name => Song.find(song.first).display_name), :method => 'post', :remote => true, :class => 'btn veto' %>
<% if @vote %>
	<%= link_to 'Oops, take that back', @vote, method: :delete, :remote => true, :class => 'btn btn-inverse remove_vote display' %>
<% else %>
	<%= link_to 'Oops, take that back', @vote, method: :delete, :remote => true, :class => 'btn btn-inverse remove_vote no_display' %>
<% end %>
