class SongsController < ApplicationController
  before_action :check_admin
  before_action :set_song, only: [:show, :edit, :update, :destroy]

  def index
  	@songs = Song.all
  end

  def new
  	@song = Song.new
  	@artists = Artist.all
  	@song.alt_names.new
  	@artist = @song.artists.new
  	@artist.alt_names.new
  	
  end

  def create
  	#song's title and instance variable
  	@song = Song.new(song_params)
  	
  	#song's alternative titles
  	alt_song_params[:alt_names_attributes].each do |key, alt_name|
  		@song.alt_names.build(alt_name: alt_name[:alt_name])
  	end
  	
  	#go through all entered artists to attach to song
  	artist_params[:artists_attributes].each do |key, artist|
  		#search by artist and alternative names
		if @artist = Artist.find_by(name: artist[:name]) or @alt_artist = AltName.find_by(alt_name: artist[:name])
			if @artist.nil? #if entered value found in alternative names
				@artist = Artist.find_by(id: @alt_artist.diff_nameable_id)
			end
			@song.artist_ids = @artist.id 
		#otherwise, create the new artist
		else 
			@artist = @song.artists.build(name: artist[:name])
			
			#artist's alternative names
			artist[:alt_names_attributes].each do |alt_key, alt_name|
				@artist.alt_names.build(alt_name: alt_name[:alt_name])
			end
		end
	end
  	
	@song.display_name = @artist.name + " - " + @song.title
	
    respond_to do |format|
      if @song.save
        format.html { redirect_to @song, notice: 'Artist and song was successfully created.' }
        format.json { render action: 'show', status: :created, location: @song }
      else
        format.html { render action: 'new' }
        format.json { render json: @song.errors, status: :unprocessable_entity }
      end
    end
  end
  
  def show
  	@song = Song.find_by(id: @song.id)
  end

  def edit
    @artists = Artist.all
  end
  
  def update
	respond_to do |format|
	  if @song.update_attributes(song_params)
		format.html { redirect_to songs_path, notice: 'Song was successfully updated.' }
		format.json { head :no_content }
	  else
		format.html { render action: 'edit', notice: 'didnt work' }
		format.json { render json: @song.errors, status: :unprocessable_entity }
	  end
	end
  end
  
  
  def destroy
    @song.destroy
    respond_to do |format|
    	format.html { redirect_to songs_url }
    	format.json { head :no_content }
    end
  end
  
  private
  	def artist_exists?
  		@artist = Artist.find_by(name: artist[:artist][:name]) or @alt_artist = AltName.find_by(alt_name: artist[:artist][:name])
  	end
  	
  	def set_song
  		@song = Song.find(params[:id])
  	end
  	
  	def song_params
  		params.require(:song).permit(:title, :alt_names_attributes => [:alt_name], :artists_attributes=> [:name, :alt_names_attributes => [:alt_name]])
  	end
  	
  	def artist_params
  		params.require(:song).permit(:artists_attributes => [:name, :alt_names_attributes => [:alt_name]])
  	end
  	
  	def alt_song_params
  		params.require(:song).permit(:alt_names_attributes => [:alt_name])
  	end
end